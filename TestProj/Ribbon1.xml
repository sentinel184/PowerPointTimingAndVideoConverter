<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
	  <tabs>
		  <tab idMso="TabSlideShow">
			  <group id="myGroup" label="Video Description"
						   visible="true" insertBeforeMso="GroupSaveRecording" >
				  <button id="myGetVideoDescription" label="Получить Тайм-коды" enabled="true"
								  onAction="OnCustomButtonClick" getImage="GetVideoportalImage"
								  size="large" />
			  </group>
		  </tab>

		  <tab idMso="TabSlideShow">
			  <group id="myGroup2" label="Video Description"
						   visible="true" insertBeforeMso="GroupSaveRecording" >
				  <button id="myGetExportSubTitlesFromAudioFile" label="Перевести голос в комментарии" enabled="true"
								  onAction="OnButtonClickExportSubTitlesFromVideoFile" getImage="Image"
								  size="large" />
			  </group>
		  </tab>	
		  <tab idMso="TabSlideShow">
			  <group id="myGroup3" label="Video Description"
						   visible="true" insertBeforeMso="GroupSaveRecording" >
				  <button id="my" label="Преобразовать презентацию в Видео" enabled="true"
								  onAction="ConvertPresentationToVideo" getImage="Image"
								  size="large" />
			  </group>
		  </tab>


		  
	  </tabs>
  </ribbon>
</customUI>
